<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="30sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:paddingTop="30sp"
            android:paddingBottom="20sp">

            <EditText
                android:id="@+id/fullNameProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_person"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/emailProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="20sp"
                android:focusableInTouchMode="false"/>


            <EditText
                android:id="@+id/cinProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="CIN"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/phoneProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="20sp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:backgroundTint="@color/colorApp"
            android:fontFamily="@font/kaushan_script_regular"
            android:text="EDIT"
            android:textSize="20sp"

            />

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:backgroundTint="@color/red"
            android:fontFamily="@font/kaushan_script_regular"
            android:text="LOG OUT"
            android:textSize="20sp"

            />

    </LinearLayout>

</ScrollView>