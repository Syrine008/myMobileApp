<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:fontFamily="@font/kaushan_script_regular"
                android:text="Forgot Password"
                android:textColor="@color/colorApp"
                android:textSize="25sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30sp"
                android:src="@drawable/test_logo" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="20sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:fontFamily="@font/kaushan_script_regular"
                android:text="Enter Your Email :"
                android:textColor="@color/colorApp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailForgPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="15sp"
                android:hint="user@gmail.com"
                android:layout_marginTop="12sp"/>

            <Button
                android:id="@+id/btnForgPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"
                android:backgroundTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:text="Send"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_contact"
                android:drawableTint="@color/white"

                />

            <Button
                android:id="@+id/goTosignIn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/ic_back"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:text="Back"
                android:textColor="@color/colorApp"
                android:textSize="20sp"

                />

        </LinearLayout>
    </LinearLayout>

</ScrollView>