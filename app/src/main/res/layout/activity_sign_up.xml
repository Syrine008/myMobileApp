<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30sp"
                android:fontFamily="@font/kaushan_script_regular"
                android:text="@string/welcome_sign_up"
                android:textColor="@color/colorApp"
                android:textSize="25sp"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30sp"
                android:src="@drawable/test_logo" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="20sp">

            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_person"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_email"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_cin"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="CIN"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/phoneSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_phone"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textSize="20sp"

                />

            <EditText
                android:id="@+id/confirmPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:drawableEnd="@drawable/ic_password"
                android:drawableTint="@color/colorApp"
                android:fontFamily="@font/kaushan_script_regular"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textSize="20sp"

                />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            android:backgroundTint="@color/colorApp"
            android:fontFamily="@font/kaushan_script_regular"
            android:text="Sign Up"
            android:textSize="20sp"

            />

        <TextView
            android:id="@+id/goTosignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kaushan_script_regular"
            android:text="@string/goToSignIn"
            android:textColor="@color/colorApp"
            android:textSize="18sp" />


    </LinearLayout>

</ScrollView>